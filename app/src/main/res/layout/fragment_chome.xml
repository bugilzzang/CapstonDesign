<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/c_ground">

        <ImageButton
            android:id="@+id/stadium"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/c_button_background"
            android:backgroundTint="@color/sahmyook"
            android:src="@drawable/c_ic_stadium"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <ImageButton
            android:id="@+id/jangbiw"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignTop="@id/stadium"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/stadium"
            android:background="@drawable/c_button_background"
            android:backgroundTint="@color/sahmyook"
            android:src="@drawable/c_ic_jangbi" />

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="300dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="35dp"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:id="@+id/my_matching_list"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/purple_700"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/my_matching"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15dp"/>
                </LinearLayout>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_matching_list" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/purple_700"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/list"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15dp"/>
                </LinearLayout>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list"
                    android:layout_weight="1" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>